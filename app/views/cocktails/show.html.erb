<% @measures = %w[1cl 2cl 3cl 4cl 5cl 6cl 7cl 8cl 9cl 10cl] %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
    <%= f.input :description, label: 'Centilitrage', collection: @measures, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= f.input :ingredient, collection: @ingredients, class: 'form-control' %>
  </div>
   <%= f.submit class: 'btn btn-primary' %>
 <% end %>

